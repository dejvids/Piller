<?xml version="1.0" encoding="UTF-8" ?>
<resources>

    <style name="PillerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_blue_700</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">false</item>
    </style>
  
    <style name="NotificationActionText">
      <item name="android:textColor">@color/md_blue_500</item>
      <item name="android:textSize">17sp</item>
		</style>

	 <style name="ListPrimaryText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
		</style>
  <style name="NotificationTextMedium" parent="@android:style/TextAppearance.Medium">
    <item name="android:textColor">@android:color/primary_text_light</item>
  </style>
	
    <style name="ListSecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

  <style name="NotificationTextSmall" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">@android:color/primary_text_light</item>
  </style>
  <style name="NotificationTitle" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">@color/md_blue_500</item>
  </style>

  <style name="NotificationDesc" parent="@android:style/TextAppearance.Small">
    <item name="android:textColor">@color/md_grey_500</item>
  </style>
    

	
    <style name="ListSecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

  <style name="DialogTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>


	  <style name="BorderlessButton">
        <item name="android:textSize">16sp</item>
